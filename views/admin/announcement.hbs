<div class="container">
    <form method="post" action="/admin/add-announcement" enctype="multipart/form-data">
        <h1 class="mt-5 mb-5 text-center">Add Announcement</h1>
  <div class="form-group">
    <label for="exampleFormControlInput1">Title</label>
    <input type="text" name="title" class="form-control" placeholder="Enter a title">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Message</label>
    <textarea name="message" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="exampleFormControlFile1">Attachments</label>
    <input type="file" name="files" class="form-control-file" id="exampleFormControlFile1" multiple>
  </div>
  <button type="submit" class="btn btn-success">Add Announcement</button>
</form>
</div>