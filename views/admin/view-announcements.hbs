<div class="container mt-5">
    <table class="table display" id="table_id">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Message</th>
      <th scope="col">Attachments</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
      {{#each announcements}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.title}}</td>
      <td>{{this.message}}</td>
      <td>
          {{#each this.attachments}}
            <a href="/attachments/{{../_id}}{{this.name}}" download="{{this.name}}">{{this.name}}</a><br>
          {{/each}}
      </td>
      <td>
          <a class="btn btn-danger text-white" href="/admin/delete-announcement/{{this._id}}">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
<script>
    $(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>