<div class="container mt-5">
    <table class="table display" id="table_id">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Message</th>
      <th scope="col">Attachments</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
      {{#each announcements}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.title}}</td>
      <td>{{this.message}}</td>
      <td>
          {{#each this.attachments}}
            <a href="/attachments/{{../_id}}{{this.name}}" download="{{this.name}}">{{this.name}}</a><br>
          {{/each}}
      </td>
      <td>
          <a class="btn btn-danger text-white" data-toggle="modal" data-target="#exampleModal">Delete</a>
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Delete Announcement?</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Are you sure to delete announcement
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <a class="btn btn-primary text-white" href="/admin/delete-announcement/{{this._id}}">Confirm</a>
                </div>
              </div>
            </div>
          </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
<script>
    $(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>