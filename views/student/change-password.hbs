<div class="container mt-5 mb-5">
    <h1 class="text-center mb-5">Change password</h1>
    <form method="post" action="/student/change-password" enctype="multipart/form-data">
    <div class="form-group">
    <input type="password" class="form-control" name="currpassword" aria-describedby="name" placeholder="Enter current password">
  </div>
  <div class="form-group">
    <input type="password" class="form-control" name="newpassword" aria-describedby="name" placeholder="Enter new password">
  </div>
  <div class="form-group">
    <input type="password" class="form-control" name="newcpassword" aria-describedby="name" placeholder="Confirm new password">
  </div>
  <p style="color:red;margin:10px 0px;">{{err}}</p>
  <button type="submit" class="btn btn-primary">Change password</button>
  </form>
  </div>